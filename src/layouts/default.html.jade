- var scripts = getBlock("scripts")
- var styles = getBlock("styles")

//- Prettify: https://code.google.com/p/google-code-prettify/
- styles.add(["//cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.min.css"])
- scripts.add(["//cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.min.js"])

//- jQuery: http://jquery.com/
- scripts.add(["//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"])

//- Twitter Bootstrap: http://getbootstrap.com/
- styles.add(["//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"])
- scripts.add(["//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"])

//- Modernizr: http://modernizr.com/
- scripts.add(["//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"])

//- Site + Document scripts and styles
- styles.add([getUrl("styles/style.css")])
- scripts.add([getUrl("scripts/script.js")])
- scripts.add(document.scripts || [])

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="author", content=getAuthor())
    meta(name="description", content=getDescription())
    meta(name="keywords", content=getKeywords())
    meta(name="viewport", content="width=device-width")      
    != getBlock("meta").toHTML()

    title= getTitle()

    != styles.toHTML()
  body
    .container
      section#content.content!= content
      hr
      footer
        .copyright &copy; #{getAuthor()} #{site.date.getFullYear()}

    != scripts.toHTML()
